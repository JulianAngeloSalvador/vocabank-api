<% const loc = locals.url.current.split("/")[2] %>
<%-include('../layouts/root-head')%>

    <section data-location="dashboard" class="content-container">
        <aside>
            <header>
                <%-include('../partials/app-logo')%>
                <a href="/" class="text-subtitle font-bold">Vocabank</a>
            </header>
            <ul class="dashboard-links-container">
                    <li>
                        <a href="/dashboard" class="<%= locals.url.current === "/dashboard" ? 'active' : ''  %>">
                            <%-include('../partials/app-logo')%>
                            <span data-link-label>Dashboard</span>
                        </a>
                    </li>
                <% locals.paths.dashboard_paths.children.map((path) => { %>
                    <li>
                        <a href="<%= path.route %>"
                        class=" <%= loc === path.title ? 'active' : '' %>">
                            <%-include('../partials/app-logo')%>
                            <span data-link-label><%= path.title %></span>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </aside>
        <main>
            <header>
                <p data-path-display><%= locals.url.current %></p>
            </header>
            <section class="dashboard-content">
                <% if (locals.url.current === "/dashboard/words") { %>
                    <div>WORDS</div>
                <% } else if (locals.url.current === "/dashboard/translations") { %>
                    <div>TRANSLATIONSSSSS</div>
                <% } else if (locals.url.current === "/dashboard") { %>
                    <div>dashyyyyyyyy</div>
                <% } else { %>
                    <div>Nothing to display</div>
                <% } %>
            </section>
        </main>
    </section>


<%-include('../layouts/root-foot')%>