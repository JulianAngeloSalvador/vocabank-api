<%-include('../layouts/root-head')%>

    <section data-location="words" class="content-container">
        <header>
            <h4>Words</h4>
            <form action="/words/search" class='search-input '>
                <div class="input-container">
                    <input type="search" name="word" id="wordSearch" placeholder="Search a word">
                </div>
                <button type="submit" class="font-semibold">Search</button>
            </form>
        </header>
        <section class="main-content">
            <form action="/words/view" method="post" class="words-container">
                <% words.map((item) => { %>
                <% const { id, uuid, word } = item %>
                <button type="submit" value="<%= uuid%>" name="word"><%= word%></button>
                <% }) %>
            </form>
        </section>
    </section>


<%-include('../layouts/root-foot')%>